#!/bin/bash

# === Definire cale + versiune ===
SCRIPT_DIR="$(dirname "$0")"
VERSION=$(git -C "$SCRIPT_DIR" describe --tags --abbrev=0 2>/dev/null)

# === Functie: Afiseaza changelog pentru versiunea curenta ===
afiseaza_changelog() {
  CHANGELOG_PATH="$SCRIPT_DIR/../share/proxmigrate/CHANGELOG.md"
  if [[ -f "$CHANGELOG_PATH" && -n "$VERSION" ]]; then
    echo ""
    echo "ğŸ“ CHANGELOG pentru $VERSION:"
    grep -A 50 "$VERSION" "$CHANGELOG_PATH" | sed '/^## \[/q'
  else
    echo "âš ï¸ CHANGELOG.md lipseste sau versiune necunoscuta."
  fi
}

# === Functie: Verificare versiune noua pe GitHub ===
verifica_update() {
  echo "ğŸ” Verific versiunea curenta ProxMigrate..."

  REMOTE_VERSION=$(curl -s https://api.github.com/repos/Douche4426/proxmigrate/releases/latest | grep tag_name | cut -d '"' -f4)

  if [[ -z "$REMOTE_VERSION" ]]; then
    echo "âš ï¸ Nu am putut verifica versiunea de pe GitHub."
    return
  fi

  echo "ğŸ” Versiune locala:  ${VERSION:-neidentificata}"
  echo "ğŸŒ Versiune GitHub:  $REMOTE_VERSION"

  if [[ "$VERSION" == "$REMOTE_VERSION" ]]; then
    echo "âœ… Esti la zi cu ultima versiune."
  else
    echo "â¬†ï¸  Este disponibila o versiune noua: $REMOTE_VERSION"
    echo "ğŸ’¡ Ruleaza: proxmigrate â†’ Mentenanta â†’ Actualizare"
  fi
}

# === Ruteaza in functie de argument ===
case "$1" in
  --changelog)
    afiseaza_changelog
    ;;
  --check-update|--update-check)
    verifica_update
    ;;
  *)
    echo "ğŸ§© ProxMigrate - Versiune: ${VERSION:-necunoscuta}"
    ;;
esac
